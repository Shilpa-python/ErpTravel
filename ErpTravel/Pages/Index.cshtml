@page
@model IndexModel
@{
    ViewData["Title"] = "Travel Booking";
}

<h1>Travel Booking to Singapore</h1>

<form method="post">
    <label for="days">Number of Nights</label>
    <select id="days" name="days" required>
        <option value="2">2 Days 1 Night</option>
        <option value="3">3 Days 2 Nights</option>
        <option value="4">4 Days 3 Nights</option>
        <!-- Add more options as needed -->
    </select>

    <label for="adults">Number of Adults</label>
    <input type="number" id="adults" name="adults" min="1" required />

    <label for="childrenWithBed">Children with Bed</label>
    <input type="number" id="childrenWithBed" name="childrenWithBed" min="0" required />

    <label for="childrenWithoutBed">Children without Bed</label>
    <input type="number" id="childrenWithoutBed" name="childrenWithoutBed" min="0" required />

    <label for="rooms">Number of Rooms</label>
    <input type="number" id="rooms" name="rooms" min="1" required />

    <label for="vehicle">Type of Vehicle</label>
    <select id="vehicle" name="vehicle" required>
        <!-- Vehicle options will be dynamically updated based on the number of people -->
    </select>

    <input type="submit" value="Submit" />
</form>

<div id="itinerary">
    <!-- Itinerary details will be shown here based on user selections -->
</div>
<script src="~/script.js"></script>
